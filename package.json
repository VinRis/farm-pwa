{
  "name": "farm-pwa",
  "version": "2.0.0",
  "description": "Modern Progressive Web App for Dairy and Poultry Farm Management",
  "main": "src/js/app.js",
  "scripts": {
    "start": "live-server public --port=3000",
    "build": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "watch": "webpack --mode=development --watch",
    "deploy": "npm run build && gh-pages -d dist",
    "test": "jest",
    "lint": "eslint src/",
    "format": "prettier --write \"src/**/*.{js,css,html}\"",
    "serve": "http-server public -p 8080 -c-1",
    "generate-icons": "node scripts/generate-icons.js",
    "generate-screenshots": "node scripts/generate-screenshots.js",
    "audit-pwa": "lighthouse http://localhost:3000 --view --output=html --output-path=./lighthouse-report.html"
  },
  "keywords": [
    "pwa",
    "farm-management",
    "dairy",
    "poultry",
    "agriculture",
    "offline-first",
    "mobile-first"
  ],
  "author": "VinRis",
  "license": "MIT",
  "dependencies": {
    "chart.js": "^3.7.0",
    "date-fns": "^2.28.0",
    "idb": "^7.0.0",
    "localforage": "^1.10.0",
    "web-push": "^3.5.0",
    "workbox-window": "^6.5.3"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "babel-loader": "^8.2.3",
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "^6.6.0",
    "eslint": "^8.10.0",
    "file-loader": "^6.2.0",
    "gh-pages": "^6.3.0",
    "html-webpack-plugin": "^5.5.0",
    "http-server": "^14.1.0",
    "jest": "^27.5.1",
    "lighthouse": "^13.0.1",
    "live-server": "^1.2.0",
    "prettier": "^2.5.1",
    "style-loader": "^3.3.1",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^5.2.2",
    "workbox-webpack-plugin": "^6.5.3"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all",
    "last 2 versions"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/VinRis/farm-pwa.git"
  },
  "homepage": "https://vinris.github.io/farm-pwa/",
  "pwa": {
    "name": "Farm Manager Pro",
    "short_name": "Farm Manager",
    "start_url": "/farm-pwa/",
    "display": "standalone",
    "theme_color": "#4CAF50",
    "background_color": "#FFFFFF"
  }
}
